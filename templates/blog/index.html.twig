{% for message in app.flashes('success') %}
    <div class="col-md-5 mx-auto alert alert-success text-center">
        {{ message }}
    </div>
{% endfor %}


<div class="container d-flex justify-content-between flex-wrap">
    {% for article in articles %}
        <div class="card mb-5" style="width: 17rem;">
        <a href="{{ path('blog_show', {"id" : article.id }) }}" style="text-decoration: none; color: white;">
            <span class="badge rounded-pill text-bg-primary">{{ article.category.title | slice(0, 20) }}</span>
            <img src="{{ asset('images/articles/' ~ article.image) }}" class="card-img-top" alt="image de l'article">
            <div class="card-body">
                <h5 class="card-title">{{ article. title | slice(0, 40) }}...</h5>
                <p>üóìÔ∏è {{ article.createdAt | date('d/m/Y') }}</p>
            </div>
        </a>
        </div>
    {% endfor %}
</div>

