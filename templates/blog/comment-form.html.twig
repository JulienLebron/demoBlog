{% extends "base.html.twig" %}

{% block body %}

<h1>
    {% if editMode %}
        Modification de l'article 
    {% else %} 
        Création d'un article 
    {% endif %}
</h1>

{# {{ form(formComment) }} #}
{# form() est un fonction twig permettant d'afficher un formulaire #}

{{ form_start(formComment, {
    attr : {
        novalidate: 'novalidate'
    }
}) }}
{# form_start() et form_end() permettent de délimiter un formulaire, de modifier ses champs, de changer la méthode du formulaire ...0 #}

{# form_widget() permet de gérer l'affichage d'un champ #}
{# {{ form_widget(formComment.title) }}
{{ form_widget(formComment.content) }}
{{ form_widget(formComment.image) }} #}

{# form_row() permet de gérer l'affichage d'un champ et de son label  #}
{{ form_row(formComment.author, {
    label : "Titre",
    attr: {
        placeholder: "Titre de l'article"
    }
}) }}
{{ form_row(formComment.content, {'attr': {'placeholder': "Contenu de l'article"}}) }}
{{ form_row(formComment.article) }}

<button type="submit" class="btn btn-primary mt-2">
{% if editMode %}
    ✅ Enregistrer les modifications
{% else %}
    ✅ Ajouter l'article
{% endif %}
</button>

{{ form_end(formComment) }}

{% endblock %}